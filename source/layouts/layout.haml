!!!5
%html
  %head
    %meta{:charset => "utf-8"}
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    %meta{:content=>"IE=edge,chrome=1", "http-equiv"=>"X-UA-Compatible"}
    %meta{:content => "width=device-width", :name => "viewport"}

    <!-- Use title if it's in the page YAML frontmatter -->
    %title= page_title
    
    = stylesheet_link_tag "screen"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Arvo"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=PT+Sans"  
  %body
    /[if lt IE 7] <p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p>
    .page-wrapper

      = yield
      
      .footer.full-width-features{:name=>"contact"}
        .container
          .row
            .span12
              %h2 We're based out of Houston, TX.
            .icons
              %a{:href=>"https://twitter.com/codeparkhouston"}
                %img{:src=>"/images/Twitter.png", :alt=>"twitter"}
              %a{:href=>"mailto:codeparkhouston@gmail.com"}
                %img{:src=>"/images/email.png", :alt=>"email"}
        .container
          .copyright
            %p Created in haste by Code Park.

    = javascript_include_tag  "all", "dev"
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-48083894-1', 'codeparkhouston.com');
      ga('send', 'pageview');

      window.jQuery || document.write('<script src="javascripts/vendor/jquery-1.8.0.min.js"><\/script>')
    /[if lt IE 9] 
      %script{:src=>"/javascripts/html5shiv.js"}


